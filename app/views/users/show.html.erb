<div class="showAll">
  <%= render partial: "user_card", locals: {u: @user} %>
  <div class="bioDiv">
    <div class="bio">Bio</div>
    <div> <%= @user.bio %> </div>
  </div>
  <div>
    <% for i in @recent_posts do %>
      <%= render partial: "posts/post_card", locals: {post: i} %>
    <% end %>
  </div>
  <button type='button'>
    <%= link_to "See all posts", user_posts_path(params[:id])%>
  </button>
</div>
